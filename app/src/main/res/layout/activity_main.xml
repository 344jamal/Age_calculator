<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/txtdob"
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Enter your DOB"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtshow"
        android:layout_width="355dp"
        android:layout_height="71dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:text="Your Age Shows Here"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/agebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtdob" />

    <Button
        android:id="@+id/agebtn"
        android:layout_width="229dp"
        android:layout_height="72dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="229dp"
        android:onClick="BuClickEvent"
        android:text="@string/get_my_age"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtshow" />
</androidx.constraintlayout.widget.ConstraintLayout>